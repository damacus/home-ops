# Additional packages to install in the image
# These are the packages required for Kubernetes node preparation
PACKAGE_LIST_ADDITIONAL="$PACKAGE_LIST_ADDITIONAL \
    apt-transport-https \
    ca-certificates \
    conntrack \
    curl \
    dirmngr \
    gdisk \
    gnupg \
    hdparm \
    htop \
    iptables \
    iputils-ping \
    ipvsadm \
    libseccomp2 \
    lm-sensors \
    net-tools \
    nfs-common \
    nvme-cli \
    open-iscsi \
    parted \
    psmisc \
    python3 \
    python3-apt \
    python3-kubernetes \
    python3-yaml \
    smartmontools \
    socat \
    software-properties-common \
    unzip \
    util-linux"

# Set locale to en_GB
DEST_LANG="en_GB.UTF-8"

# Set timezone
TZDATA="Europe/London"
