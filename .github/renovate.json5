{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'github>damacus/renovate-config',
    'github>damacus/renovate-config:autoMergeGitHubActions',
    'github>damacus/renovate-config:cnpg.json5',
    'github>damacus/renovate-config:groups',
    'github>damacus/renovate-config:labels.json5',
    'github>damacus/renovate-config:semanticCommits.json5',
    'github>damacus/renovate-config:packageRules.json5',
    'github>damacus/renovate-config:autoMergeSelect.json5',
  ],
  packageRules: [
    {
      description: 'Disable digest pinning for OCI repositories (as it breaks flux-local)',
      matchDatasources: [
        'helm',
      ],
      pinDigests: false,
      matchPackageNames: [
        '/^oci:///',
      ],
    },
  ],
  packageRules: [
    {
      description: "Disable digest pinning for OCI repositories (as it breaks flux-local)",
      matchDatasources: ["helm"],
      matchPackagePatterns: ["^oci://"],
      pinDigests: false
    }
  ]
}
