[Unit]
Description=Ironstone First-Boot Hostname Setup
DefaultDependencies=no
Before=cloud-init-local.service cloud-init.service
After=systemd-networkd-wait-online.service network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/ironstone-init.sh
RemainAfterExit=yes
TimeoutStartSec=30

[Install]
WantedBy=cloud-init-local.service
