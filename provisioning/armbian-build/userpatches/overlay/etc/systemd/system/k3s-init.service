[Unit]
Description=K3s Initialization Service
Documentation=https://k3s.io
After=network-online.target
Wants=network-online.target
ConditionPathExists=/usr/local/bin/k3s
ConditionPathExists=!/etc/rancher/k3s/config.yaml

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/bash -c 'echo "K3s binary is ready. Configure via cloud-init or manually create /etc/rancher/k3s/config.yaml"'
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
